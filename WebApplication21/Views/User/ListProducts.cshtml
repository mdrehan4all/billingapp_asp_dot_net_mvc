@model IEnumerable<WebApplication21.Models.Product>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">List Products</h2>
            <a href="Login" class="btn btn-primary btn-block mt-3">Back</a>
            <a href="AddProducts" class="btn btn-primary btn-block mt-3">Add Products</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                    {
                        <tr>
                            <td>@data.Id</td>
                            <td>@data.Name</td>
                            <td>@data.Description</td>
                            <td>@data.Price</td>
                            <td>@data.Stock</td>
                            <td>
                                <a class="btn btn-sm btn-danger" href="/User/DeleteProduct/@data.Id">Delete</a>
                                <a class="btn btn-sm btn-primary" href="/User/UpdateProduct/@data.Id">Update</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>