@model WebApplication21.Models.Product

@{
    if (TempData["message"] != null)
    {
        <div class="alert alert-success">
            @TempData["message"]
        </div>
    }
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">Update Products</h2>
            <a href="/User/ListProducts" class="btn btn-primary btn-block mt-3">Back</a>
          
                <form method="post" action="/User/UpdateProduct">
                    <div class="form-group accept-policy mt-3">
                        <input type="hidden" id="name" name="id" value="@Model.Id"/>

                        <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="@Model.Name" required />

                        <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" name="description" value="@Model.Description" required />

                        <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" name="price" value="@Model.Price" required />

                        <label for="stock">Stock</label>
                    <input type="number" class="form-control" id="stock" name="stock" value="@Model.Stock" required />

                        <button type="submit" class="btn btn-primary w-100 mt-3">Update</button>
                    </div>
                </form>
            
        </div>
    </div>
</div>
